.header {
  position: relative;
  width: 100%;
  background: #1e2b6c url('../images/header/burger_agressive.png') no-repeat center top;
  background-size: 1440px 894px;

  & > .container {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;

    height: 894px;
    padding-top: 90px;
    padding-bottom: 146px;

    & > *{
      z-index: 5;
    }
  }

  &-intro {
    position: relative;
    width: 320px;
    padding: 0;
    color: #ffffff;

    &::before {
      position: absolute;
      top: -86px;
      left: -82px;

      content: '';
      display block;
      width: 440px;
      height: 479px;
      border-radius: 30px;
      background-color: $bg-color;
      transform: rotate(-35deg);
    }

    &__heading {
      position: relative;
      margin: 0 0 35px;

      font-family: $proxima;
      font-size: 42px;
      font-weight: 800;
      line-height: 45px;
      text-shadow: 0 0 21px rgba(0, 196, 255, 0.61);
    }
    &__description {
      position: relative;
      margin: 0 0 55px;
      font-size: 16px;
      line-height: 25px;
    }
    &__btn-video {
      position: relative;
      width: 279px;
      height: 78px;
      padding-left: 45px;
      border: none;
      border-radius: 10px;

      font-family: $proxima;
      font-size: 20px;
      font-weight: bold;
      line-height: 24px;
      text-shadow: 0 0 8px rgba(0, 196, 255, 0.75);
      color: #ffffff;

      background-color: $red;
      cursor: pointer;

      &::before {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 25px;
        content: '';
        display: block;
        size: 48px;
        margin: auto;
        background: transparent url('../images/icons/play.svg') no-repeat center;
      }
    }
  }

  &-form {
    background-color: $bg-color;
    box-shadow: 0 -1px 7px 0 rgba(0, 0, 0, 0.5);
  }

  &-logo {
    position: absolute;
    top: 32px;
    left: 15px;
  }
  &-social.social {
    position: relative;

    margin: 12px -8px;
  }
}
.header-parallax {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  display: flex;
  justify-content: flex-end;
  max-width: 1440px;
  size: 100% 894px;
  margin: auto;
}
.layer-front {
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;

  background-color: transparent ;
  background-image: url('../images/header/blue_frame.png');
  background-repeat: no-repeat;
  background-position: center;
}
.layer-area {
  position: relative;

  max-width: 1024px;
  width: 100%;
}
.layer-phone {
  position: absolute;
  bottom: 0;
  top: -32px;
  right: 135px;
  overflow: hidden;

  width: 326px;
  height: 670px;
  padding: 80px 18px;
  margin: auto;


  &.under-front {
    background: transparent url('../images/header/iphone.svg') no-repeat center;
  }
  &.on-draggable {
    z-index: 5;
  }
}
