.header {
  position: relative;
  width: 100%;
  height: 1001px;
  background-color: transparent;
  background-image: url("../images/header/burger_agressive.jpg"), linear-gradient(to right, #07a9eb 40%, #1e2b6c 60%);
  background-repeat: no-repeat;
  background-position: center top;
  background-size: auto 900px, auto;

  @media screen and (max-width: 1023px) {
    height: auto;
    background-color: #1e2b6c;

    background-image: url("../images/mobile/header-bg.png");
    background-size: 640px 620px;
  }

  & > .container {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;

    height: 894px;
    padding-top: 32px;
    padding-bottom: 146px;

    @media screen and (max-width: 1023px) {
      height: auto;
      padding: 30px 0 0;
    }
  }

  &-intro {
    position: relative;
    width: 320px;
    padding: 0;
    color: #ffffff;
    z-index: 5;

    &::before {
      position: absolute;
      bottom: 54px;
      left: -82px;

      content: '';
      display block;
      width: 440px;
      height: 479px;
      border-radius: 30px;
      background-color: $bg-color;
      transform: rotate(-35deg);
    }

    @media screen and (max-width: 1023px) {
      width: 100%;
      padding: 30px 30px 17px;
      background-color: $bg-color;

      &::before {
        display: none;
        content: none;
      }
    }

    &__heading {
      position: relative;
      margin: 0 0 35px;

      font-family: $proxima;
      font-size: 42px;
      font-weight: 800;
      line-height: 45px;

      @media screen and (max-width: 1023px) {
        margin-bottom: 20px;
        font-size: 36px;
        line-height: 50px;
        width: 500px;
      }
    }
    &__description {
      position: relative;
      margin: 0 0 55px;
      font-size: 16px;
      line-height: 25px;

      @media screen and (max-width: 1023px) {
        margin: 0 0 16px;
        font-size: 24px;
        line-height: 36px;
      }
    }
    &-social.social {
      margin: 0 -8px;

      .social-item {
        a:not([aria-label="store"]) {
          display: inline-block;
          size: 68px;
        }
      }
    }
    &__btn-video {
      position: relative;
      width: 279px;
      height: 78px;
      padding-left: 45px;
      border: none;
      border-radius: 10px;

      font-family: $proxima;
      font-size: 20px;
      font-weight: bold;
      line-height: 24px;
      color: #ffffff;

      background-color: $red;
      cursor: pointer;

      &::before {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 25px;
        content: '';
        display: block;
        size: 48px;
        margin: auto;
        border-radius: 50%;
        background: transparent url('../images/icons/play.svg') no-repeat center;
      }

      @media screen and (max-width: 1023px) {
        display: none;
      }
    }
  }
  &-actions {
    justify-content: space-between;
    align-items: center;

    width: 100%;
    padding: 0 30px 0 0;
    margin-top: 400px;

    &__btn-video {
      position: relative;
      width: 230px;
      height: 151px;
      padding: 70px 20px 0 0;
      border: 0;
      font-family: 'ProximaNova','Rubik','Arial',sans-serif;
      font-size: 18px;
      font-weight: 700;
      line-height: 22px;
      color: #ffffff;

      background: transparent url('../images/mobile/play-bg.svg') no-repeat 0 0;
      background-size: 262px;
      cursor: pointer;

      &::before {
        position: absolute;
        top: 42px;
        left: -18px;
        right: 0;
        content: '';
        display: block;
        size: 48px;
        margin: auto;
        border-radius: 50%;
        background: transparent url('../images/icons/play.svg') no-repeat center;
      }
    }
    .stores {
      &-item {
        a[aria-label="store"] {
          size: 170px 57px;
          padding-top: 32px;
        }

        img {
          size: 170px 57px;
        }
      }
    }
    @media screen and (max-width: 1023px) {
      display: flex;
    }
  }
  &-form {
    position: relative;
    background-color: $bg-color;
    box-shadow: 0 -1px 7px 0 rgba(0, 0, 0, 0.5);

    transition: transform 0.3s ease;

    &.fixed {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 20;
    }
    &.fixed-bottom {
      transform: translateY(-100%);
    }
    @media screen and (max-width: 1023px) {
      padding-left: 15px;
      padding-right: 15px;
      box-shadow: none;
      background: #07a9eb;
    }
  }

  &-logo {
    align-self: flex-start;
    width: 100%;
    padding: 0 30px;

    h1 {
      position: relative;
      z-index: 5;
    }
  }
  &-social.social {
    position: absolute;
    right: 75px;
    top: 10px;
    z-index: 15;
    margin: 12px -8px;

    transition: top 0.25s, right 0.25s;

    @media screen and (max-width: 1440px) {
      right: 20px;
      top: 0;

      a:not([aria-label="store"]) {
        size: 32px;
      }
    }
  }
  &-stores.stores {
    position: absolute;
    bottom: 154px;
    right: 239px;
    z-index: 15;

    margin: 12px 0;
  }
}

.header-parallax {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  display: flex;
  justify-content: flex-end;

  max-width: 1629px;
  size: 100% 900px;
  margin: auto;

  @media all and (-ms-high-contrast: none) {
    display: block;
  }
  @media screen and (max-width: 1023px) {
    display: none;
  }
}


